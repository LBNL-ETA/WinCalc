cmake_minimum_required(VERSION 3.10)  # Upgrade if possible; 2.8.7 is very old

include(ExternalProject)

set(LIBRARY_FEMTHERM_BRANCH "UpdatesForWCE")

ExternalProject_Add(LibraryFEMTHERM
